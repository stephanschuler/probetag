{
  "name": "@netlogix/stencil-styleguide-output-target",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A stencil output target which also builds Pattern Lab and processes scss",
  "main": "dist/output-target.js",
  "scripts": {
    "build": "rollup --config rollup.config.output-target.ts --configPlugin typescript",
    "build:dev": "rollup -c -w",
    "format": "prettier --write '**/*.ts'",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netlogix/stencil-styleguide-output-target.git "
  },
  "peerDependencies": {
    "@stencil/core": "^4.12.0",
    "@pattern-lab/core": "^6.1.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "rollup": "^4.9.6",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "devDependencies": {
    "@stencil/core": "^4.12.1",
    "@types/node": "^18.19.14",
    "prettier": "^3.2.5",
    "typescript": "^5.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "tslib": "^2.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
